@model List<BlogApp.Web.Models.CommentVM>

@{
    var username = Context.Session.GetString("username");
}

@foreach (var item in Model)
{
    if (username == item.UserName)
    {
        <span class="text-black-50">@item.UserName</span>
        <p>
            @item.Content |  <button type="button" class="editBtn" data-id="@item.Id">Edit</button>
            <button type="button" class="delCmtBtn" data-id="@item.Id">Delete</button>

        </p>
    }
    else
    {
        <span class="text-black-50">@item.UserName</span>
        <p>@item.Content</p>
    }

}
