@model UserProfile

<div class="profile-container">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.UserName</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">@Model.Email</h6>
            <p class="card-text">@Model.PostCount</p>
        </div>
    </div>
</div>

@foreach (var post in Model.Posts)
{
    <div class="profile-container">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><a asp-controller="User" asp-action="ViewPost" asp-route-id="@post.Id">@post.Title</a></h5>
                <span class="card-subtitle mb-2 text-body-secondary">@post.CreatedAt</span>
                <p class="card-text">@post.Content</p>
            </div>
        </div>
    </div>
}
